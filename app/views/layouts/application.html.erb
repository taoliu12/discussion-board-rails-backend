<!DOCTYPE html>
<html>
  <head>
    <title>Talkytalk Discussion Board</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/8d5e9a8643.js" crossorigin="anonymous"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class='container'>
  <h1><%= link_to "Talkytalk Discussion Board", posts_path %></h1>
  <h5>Make a new post or vote on other posts!</h5>   
  <div id="navbar">
      <% if logged_in? %>
        <p>
          <%= link_to "New Post", new_post_path %> | 
          <%= link_to "All Posts", posts_path %> | 
          <%= link_to "My Posts", user_posts_path(current_user) %> | 
          <%= link_to  "Logout", logout_path, method: :delete %>
        </p>
      <% else %>
        <p>
          <%= link_to "Home", posts_path %> |
          <%= link_to  "Login", login_path %> |            
          <%= link_to  "Signup", signup_path %>
          <%= button_to "Log in with Google", '/auth/google_oauth2', class: "btn btn-primary"%>
        </p>
      <% end %>
    </div>
    <% flash.keys.each do |type| %>
      <div data-alert class="flash <%= type %> alert-box radius">
        <%= flash[type] %>
      </div>
    <% end %>
    
      <%= yield %>
    </div>
  </body>
</html>
